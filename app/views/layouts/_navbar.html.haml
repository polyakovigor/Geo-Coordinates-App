%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{ aria: { expanded: 'false' }, data: { target: '#bs-example-navbar-collapse-1', toggle: 'collapse' }, type: 'button' }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand
        = link_to root_path do
          Geo-Coordinates
          %span.glyphicon.glyphicon-globe{ aria: { hidden: true } }
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav{ style: 'border-left: 2px #337ab7 solid;' }
        %li
          = link_to 'New Location', new_location_path
      .navbar-form.navbar-right
        = form_tag locations_path, method: :get, html: { class: 'form-inline' } do
          .form-group
            = text_field_tag :search, params[:search], placeholder: 'Search for...', class: 'form-control'
          .form-group
            = submit_tag 'Search Near', name: nil, class: 'btn btn-default'